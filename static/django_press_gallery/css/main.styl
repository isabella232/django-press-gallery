@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,600,700')
@import 'reset.css'

body
    font-family: 'Open Sans', sans-serif

.clearfix:after
   content " "
   display block
   height 0
   clear both

.left
    float left

.right
    float right

.inner
    margin 0 auto
    width 720px

a 
    color #17b7f1
    text-decoration none

header
    padding-top 40px
    height 107px
    border-bottom solid 2px #eee

    h1, h2
        font-size 20px

    h2
        text-transform uppercase
        margin-bottom 5px

    p
        font-size 12px
        font-weight 600
        margin-top 5px
    a
        display block
        font-weight 400
        margin-top 2px


.no-media-set
    font-size 15px
    margin-top  20px
    text-align center
    color #aaa

.mediagroup
    border-bottom solid 2px #eee
    padding 20px 0

    .mediaset:last-child
        margin-right 0 !important
        
.mediaset
    width 216px
    margin-right 36px
    text-decoration none
    color #000

    h3
        text-align center
        margin-bottom 10px

    img
        width 216px
        height 216px
        // border solid 1px #ddd
        box-shadow 0 0 1px #aaa

.download_section
    margin-top 20px
    font-size 13px
    h4
        float left
        margin-right 5px

    a
        padding 0 5px
        display inline-block
        &:last-child
            border-right none
        border-right solid 1px #000

